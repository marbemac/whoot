<div id="post-box" class="<%= 'hide' unless @my_post == nil %>">

  <% unless @my_post == nil %>
    <h3>You will change your current post.</h3>
  <% else %>
    <h3 class='adjust'>
      Please post your plans for tonight before moving on. No free loaders!
      <div>(you can easily change your plans later)</div>
    </h3>
  <% end %>

  <div class="container">

    <div class="nav">
      <div class="option on" data-target="#new_normal_post">
        Normal Post
        <div class="icon arrow-o-r-2424"></div>
        <div class="icon arrow-r-2424"></div>
      </div>
      <div class="option" data-target="#new_invite_post">
        Open Invite
        <div class="icon arrow-o-r-2424"></div>
        <div class="icon arrow-r-2424"></div>
      </div>
      <div id="post_map"></div>
      <div id="post_image"></div>
    </div>

    <div class="forms">
      <%= render "normal_posts/form", :normal_post => NormalPost.new, :user => @user %>
      <%= render "invite_posts/form", :invite_post => InvitePost.new, :user => @user %>

      <% unless @my_post == nil %>
        <div class="cancel">Cancel</div>
      <% end %>
    </div>

  </div>
</div>