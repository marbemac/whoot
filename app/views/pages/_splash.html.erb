<div id="splash">
    <%= link_to "", user_omniauth_authorize_path(:facebook), :id => 'fb_login' %>
    <%= image_tag "splash-logo-small.png", :class => "logo", :alt => "The Whoot" %>
    <%= image_tag "splash-button1.png", :class => "info one", :alt => "Post what you are up to tonight" %>
    <%= image_tag "splash-button2.png", :class => "info two", :alt => "Connect with friends for the night" %>
    <%= image_tag "splash-button3.png", :class => "info three", :alt => "Discover exclusive night time deals" %>

    <div id="auth-login" class="hide">
        <%= render "users/sessions/new" %>
    </div>
    <div id="auth-register" class="hide">
        <%= render "users/registrations/new" %>
    </div>
</div>