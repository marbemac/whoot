<% cache("splash") do %>
  <h1 class="hide">The Whoot</h1>
  <h2 class="hide">The best way to plan your night with friends.</h2>
  <div id="splash">

    <%= link_to "", user_omniauth_authorize_path(:facebook), :id => 'fb_login' %>
    <div id="why_facebook">Why is a Facebook account required to access The Whoot?</div>
    <%= image_tag "splash-logo-small.png", :class => "logo", :alt => "The Whoot" %>
    <%= image_tag "splash-map.png", :class => "map", :alt => "Post what you are up to tonight" %>
    <div id="pronounced">Pronounced: 'The Hoot!'</div>

    <div id="whoot-video">
      <iframe src="http://player.vimeo.com/video/36704931?title=0&amp;byline=0&amp;portrait=0" width="260" height="145" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
    </div>

    <a href="http://itunes.apple.com/us/app/the-whoot/id497790312?ls=1&mt=8" class='iphone-app' target="_blank">
      <%= image_tag "iphone-app-store.png", :alt => "Available on the iPhone App Store!" %>  
    </a>
    <a href="https://market.android.com/details?id=com.whoot.android&feature=search_result#?t=W251bGwsMSwxLDEsImNvbS53aG9vdC5hbmRyb2lkIl0" class='android-app' target="_blank">
      <%= image_tag "android-app-store.png", :alt => "Available on the Android App Store!" %>
    </a>

    <div class="static_pages">
      <a href="<%= about_path %>">About</a>
      <a href="<%= contact_path %>">Contact</a>
      <a href="<%= terms_path %>">Terms</a>
      <a href="<%= privacy_path %>">Privacy</a>
      <a target="_blank" href="http://blog.thewhoot.com">Blog</a>
      <a href="<%= faq_path %>">FAQ</a>
    </div>

    <div id="auth-login" class="hide">
      <%= render "users/sessions/new" %>
    </div>
    <div id="auth-register" class="hide">
      <%= render "users/registrations/new" %>
    </div>
  </div>
<% end %>