<!doctype html>
  <!--[if lt IE 7]><html class="no-js ie6 oldie" lang="en"> <![endif]-->
  <!--[if IE 7]><html class="no-js ie7 oldie" lang="en"> <![endif]-->
  <!--[if IE 8]><html class="no-js ie8 oldie" lang="en"> <![endif]-->
  <!--[if gt IE 8]><!--><html class="no-js" lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title><%= title %></title>

    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Mobile viewport optimized: j.mp/bplateviewport -->
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    <%= stylesheet_link_tag "application" %>

    <%= csrf_meta_tags %>

    <%= javascript_include_tag 'modernizr' %>
  </head>
  <body class="<%= params[:controller] %> <%= calculate_time_of_day %>">

    <% if not signed_in? %>
      <%= render 'pages/splash' %>
    <% elsif !current_user.posted_today? %>
      <div id="post-splash">
        <%= image_tag "logo-top.png", :alt => "The Whoot", :class => 'logo' %>
        <%= render_cell :post, :create %>
        <%= link_to('Logout', destroy_user_session_path, :method=>'delete', :class => 'logout') %>
      </div>
    <% else %>
      <%= render "shared/header" %>
      <div id="wrapper">
        <div id="content">
          <div id="page">
            <%= yield :feed_filters %>
            <%= yield :user_header %>
            <div id="page_content" class="<%= controller.action_name %>">
              <%= render_cell :post, :create %>
              <%= yield %>
              <% if Rails.env.development? %>
                <%= debug(params) %>
                <div id="debug-upload-runtime"></div>
              <% end %>
            </div>
          </div>

          <div id="footer">
            <%= link_to 'Home', root_path %><span>.</span>
            <%= link_to 'About', about_path %><span>.</span>
            <%= link_to 'Contact', contact_path %><span>.</span>
            <%= link_to 'Terms', terms_path %><span>.</span>
            <%= link_to 'Privacy', privacy_path %>
            <% if current_user.role?('admin') %>
              <span>.</span><%= link_to 'Admin Area', git_er_done_dashboard_path %>
            <% end %>

            <div class="fb-like" id="footer-fb-like" data-href="http://www.facebook.com/pages/Whoot/192579647454740" data-send="false" data-layout="button_count" data-width="125" data-show-faces="true" data-font="verdana"></div>
            <a href="https://twitter.com/TheWhoot" class="twitter-follow-button" data-link-color="FFFFFF" data-width="100px" data-show-count="false">Follow @TheWhoot</a>
            <script src="//platform.twitter.com/widgets.js" type="text/javascript"></script>
          </div>
        </div>

        <%= render_cell :user, :sidebar %>
      </div>
    <% end %>

    <div id="ajax-loading">Loading...</div>
    <div id="ajax-notice"></div>
    <div id="ajax-success"></div>
    <div id="ajax-error"></div>
    <div id="form-submitting">Form submitting...</div>
    <div class="hide" id="static-data" data-d='<%= static_data %>'></div>

    <% unless calculate_time_of_day == :day %>
      <div id="stars-bg" class="<%= 'fade' if calculate_time_of_day == :sunset %>">&nbsp;</div>
    <% end %>
    <div id="city-bg">&nbsp;</div>

    <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/assets/javascripts/jquery1.6.4.js"><\/script>')</script>

    <%= javascript_include_tag "application" %>
    <script src="http://maps.google.com/maps/api/js?libraries=places&sensor=false"></script>
    <div id="fb-root"></div>
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '<%= ENV['FACEBOOK_APP_ID'] %>', // App ID
//          channelURL : '', // Channel File
          status     : true, // check login status
          cookie     : true, // enable cookies to allow the server to access the session
          oauth      : true, // enable OAuth 2.0
          xfbml      : true  // parse XFBML
        });
      };
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>

    <div id='pubnub' pub-key='<%= ENV['PUBNUB_PUBLISH_KEY'] || 'demo' %>' sub-key='<%= ENV['PUBNUB_SUBSCRIBE_KEY'] || 'demo' %>' ssl='off' origin='pubsub.pubnub.com'></div>
    <script src=http://cdn.pubnub.com/pubnub-3.1.min.js ></script>

    <!-- Google Analytics -->
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-23850469-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>

    <!-- Start of Woopra Code -->
    <% unless Rails.env.development? %>
    <script type="text/javascript">
      function woopraReady(tracker) {
          tracker.setDomain('<%= Rails.env.staging? ? 'staging.thewhoot.com' : 'thewhoot.com' %>');
          tracker.setIdleTimeout(300000);

          <% if signed_in? %>
              tracker.addVisitorProperty('name', '<%= current_user.fullname %>');
              tracker.addVisitorProperty('email', '<%= current_user.email %>');
          <% end %>

          tracker.track();

          return false;
      }
      (function() {
          var wsc = document.createElement('script');
          wsc.src = document.location.protocol+'//static.woopra.com/js/woopra.js';
          wsc.type = 'text/javascript';
          wsc.async = true;
          var ssc = document.getElementsByTagName('script')[0];
          ssc.parentNode.insertBefore(wsc, ssc);
      })();
    </script>
    <% end %>

    <!-- User Voice -->
    <script type="text/javascript">
      var uvOptions = {};
      (function() {
        var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
        uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/YxzcwxpcN52gzvCVRkaDA.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
      })();
    </script>

    <%= yield :js %>

    <% if ENV['RAILS_ENV'] != 'production' || (signed_in? && current_user.has_role?('admin')) %>
      <div id="slt">
        Cutoff: <%= Chronic.parse('today at 5:00am', :now => (Time.now - (60*60*5))) %><br />
        <%= load_time %><br />
        <%= ENV['RAILS_ENV'] %>
      </div>
    <% end %>
  </body>
</html>