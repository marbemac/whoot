<!--{% if not userBlocked(app.user, invite.createdBy) %}-->

<div class="invite_show <%= @post.night_type %>">
  <h1>
    <span><%= @post.night_type_noun %></span>
    at <%= @post.venue.name %>
  </h1>

  <div class="left">
    <!--{% if invite.image %}-->
    <!--{% include "MarbemacImageBundle:Image:show.html.twig" with {'groupId': invite.image, 'w': 180, 'h': 180, 'class':-->
    <!--'inviteImage'} %}-->
    <!--{% else %}-->
    <%= image_tag "inviteDefault.png", :class => 'inviteImage', :width => '180px' %>
    <!--{% endif %}-->

    <h3><%= @post.attending_count %> attending</h3>
    <ul class="attending">
      <% @attendees.each do |user| %>
      <!--{% if not userBlocked(app.user, user) %}-->

        <li>
          <a class="profile-image" href="<%= user_path user %>" title="<%= user.fullname %>">
            <% img = default_image_url(user, [30, 30], 'square') %>
            <%= image_tag img[:url], img[:options] %>
          </a>
          <%= user_link user, 15 %>
        </li>

      <% end %>
    </ul>
  </div>
  <div class="right">
    <div class="info">
      <% if @post.status == 'Active' %>
        <!--{% include "WhootBundle:Invite:attendingButton.html.twig" with {'invite': invite} %}-->
      <% else %>
        <div class="cancelled">This invite was cancelled.</div>
      <% end %>

      <div class="item">
        created by <%= user_link @post.user_snippet, 15 %>
      </div>
      <div class="item">
        <%= "#{@post.time} @ #{@post.venue.name}" %>
      </div>
      <div class="item">
        <%= @post.venue.address %>
      </div>
      <div class="description">
        <%= @post.content %>
      </div>
      <% if @post.venue.coordinates %>
        <div id="map-<%= @post.id %>" class="invite-map" data-name="<%= @post.venue.name %>" data-lat="<%= @post.venue.coordinates[0] %>" data-lon="<%= @post.venue.coordinates[1] %>"></div>
      <% end %>
    </div>
    <div class="comment-feed cf-<%= @post.id %>">
      <%= render "comments/form", :post => @post %>
      <% @comments_with_user.each do |comment| %>
        <%= render "comments/teaser", :comment => comment %>
      <% end %>
    </div>
  </div>
</div>