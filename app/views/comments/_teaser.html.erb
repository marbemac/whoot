<!--{% if not userBlocked(app.user, comment.createdBy) %}-->

<div class="teaser comment">
    <div class="submitted">
        <% img = default_image_url(comment.user, [30, 30], 'square') %>
        <%= image_tag img[:url], img[:options] %>
        <%= user_link(comment.user, 15) %>
        <div class="time"><%= time_ago_in_words comment.created_at, false %> ago</div>
    </div>

    <div class="content">
        <%= comment.content %>
    </div>
</div>