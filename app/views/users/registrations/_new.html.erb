<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="line">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="line">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="line">
    <%= f.label :gender %>
    <%= f.select(:gender, options_for_select([['Male', 'm'], ['Female', 'f']])) %>
  </div>

  <div class="line">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="line">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="line">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Sign up" %>
<% end %>