<div class="teaser post <%= post ? post.night_type : 'hide' %>" id="<%= post ? "post-#{post.created_by.id}" : 'post-dummy' %>" data-details="<%= normal_post_path post if post %>">
  <a class="profile-image" href="<%= user_path post.created_by if post %>" title="<%= post.created_by.fullname if post %>">
    <%= image_tag user_default_picture_path(post.created_by, :d => [50, 50], :s => 'square'), :style => "max-width: 50px;", :alt => '' if post %>
  </a>

  <div class="ulink-wrap">
    <%= user_link(post.created_by, 15) if post %>
  </div>

  <div class="what">
    <%= post.night_type_short if post %>
  </div>

  <div class="tags">
    <!--{% if post.invite is defined and post.invite %}-->
    <% if post && post.invite_post %>
      @ <%= link_to post.venue.name, invite_post_path(:id => post.invite_url) %>
    <% elsif post %>
      <% post.tags.each do |tag| %>
        <%= render "tags/teaser", :tag => tag %>
      <% end %>
    <% end %>
  </div>

  <%= render "votes/button", :target => post, :current_user => current_user %>

  <div class="clear"></div>
</div>