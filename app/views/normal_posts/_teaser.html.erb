<div class="teaser post <%= post ? post.night_type : 'hide' %>" id="<%= post ? "post-#{post.created_by.id}" : 'post-dummy' %>" data-venue-id="<%= post.venue.id.to_s if post && post.venue %>" data-details="<%= normal_post_path post if post %>">
  <a class="profile-image" href="<%= user_path post.created_by if post %>" title="<%= post.created_by.fullname if post %>">
    <%= image_tag user_default_picture_path(post.created_by, :d => [50, 50], :s => 'square'), :style => "max-width: 50px;", :alt => '' if post %>
  </a>

  <div class="ulink-wrap">
    <%= user_link(post.created_by, 15) if post %>
  </div>

  <div class="what">
    <%= post.night_type_short if post %>
  </div>

  <div class="tags">
    <% if post && post.invite_post %>
      @ <%= link_to post.invite_post.title, invite_post_path(:id => post.invite_url) %>
    <% elsif post && post.tag %>
      <%= render "tags/teaser", :tag => post.tag %>
    <% end %>
  </div>

  <div class="comments_count">
    <div class="icon comment-grey-1614"></div>
    <span><%= post ? post.comment_count.to_i : 0 %></span>
  </div>
  <%= render "votes/button", :target => post, :current_user => current_user %>

  <div class="clear"></div>
</div>