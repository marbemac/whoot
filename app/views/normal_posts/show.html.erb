<div class="post-details normal two-col-equal-height">
  <div class="left">
    <!--{% if post.invite is not defined or not post.invite %}-->
    <h4>+1's</h4>
    <ul class="voters">
      <% @voters.each do |voter| %>
      <li>
        <a class="profile-image" href="<%= user_path voter %>" title="<%= voter.fullname %>">
          <% img = default_image_url(voter, [30, 30], 'square') %>
          <%= image_tag img[:url], img[:options] %>
        </a>
        <%= user_link(voter, 15) %>
      </li>
      <% end %>

      <% if @voters.length == 0 %>
      <li class="none">No +1's yet</li>
      <% end %>
    </ul>
  </div>

  <div class="right">
    <% if @post.venue %>
      <h4 class="venue">@ <%= @post.venue.name %></h4>
    <% end %>
    <div class="comment-feed cf-<%= @post.id %>">
      <%= render "comments/form", :post => @post %>
      <% @comments_with_user.each do |comment| %>
        <%= render "comments/teaser", :comment => comment %>
      <% end %>
    </div>
  </div>
  <div class="clear"></div>
</div>